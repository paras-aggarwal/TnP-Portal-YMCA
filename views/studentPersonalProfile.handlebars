<div class="conteudo-box">
    <div class="conteudo-boxInner">
      <form class="form" method="post" action="/users/submit_personal">
        <h2>Personal Profile</h2>
        <div class="form-group">
          <label for="email">Full Name:</label>
          <div class="relative">
            <input name="fullname" value='{{user.name}}' class="form-control" id="name" type="text" pattern="[a-zA-Z\s]+" required="" autofocus="" title="Username should only contain letters. e.g. Paras Aggarwal" autocomplete="" placeholder="Type your name here...">
            <i class="fa fa-user"></i>
          </div>
        </div>
        <div class="form-group">
          <label for="email">Email address:</label>
          <div class="relative">
            <input name="email" value='{{user.email}}' class="form-control" type="email" required="" placeholder="Type your email address..." pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$">
            <i class="fa fa-envelope"></i>
          </div>
        </div>
        <div class="form-group">
          <label for="rollno">Roll Number:</label>
          <div class="relative">
            <input name="rollno" value='{{user.rollno}}' class="form-control" type="text" required="" placeholder="Type your Roll Number...">
            <i class="fa fa-envelope"></i>
          </div>
        </div>
        <div class="form-group">
          <label for="rollno">Gender:</label>
          <div class="relative">
            <select name="gender" class="form-control" type="text" required="">
                <option value="M" {{#compare user.gender '===' 'M'}} selected = "selected" {{else}} {{/compare}}>
                  M
                </option>
                <option value="F" {{#compare user.gender '===' 'F'}} selected = "selected" {{else}} {{/compare}}>
                  F
                </option>
                <option value="O" {{#compare user.gender '===' 'O'}} selected = "selected" {{else}} {{/compare}}>
                  Others
                </option>
            </select>
            <i class="fa fa-user"></i>
          </div>
        </div>
        <div  class="form-group">
          <label for="email">Date of birth:</label>
          <div class="relative">
            <input class="form-control" name="dob" value='' type="date" required="" placeholder="Type your DOB Number...">
            <i class="fa fa-calendar"></i>
          </div>
        </div>
        <div class="form-group">
          <label for="email">Contact Number 1:</label>
          <div class="relative">
            <input name="mob1" value='{{user.phone_no.phone_no1}}' class="form-control" type="text" maxlength="10" oninput="this.value=this.value.replace(/[^0-9]/g,'');" required="" placeholder="Type your Mobile Number...">
            <i class="fa fa-phone"></i>
          </div>
        </div>
        <div class="form-group">
          <label for="email">Contact Number 2:(optional)</label>
          <div class="relative">
            <input name="mob2" value='{{user.phone_no.phone_no2}}' class="form-control" type="text" maxlength="10" oninput="this.value=this.value.replace(/[^0-9]/g,'');" placeholder="Type your Mobile Number...">
            <i class="fa fa-phone"></i>
          </div>
        </div>

        <div class="tright">
          <a href=""><button class="movebtn movebtnre" type="Reset"><i class="fa fa-fw fa-refresh"></i> Reset </button></a>
          <button class="movebtn movebtnsu" type="Submit">Update <i class="fa fa-fw fa-paper-plane"></i></button>
        </div>
      </form>

    </div>
</div>
