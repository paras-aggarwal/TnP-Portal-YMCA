<div class="conteudo-box">
    <div class="conteudo-boxInner">
      {{#if success_msg}}
          <div class="alert alert-success">{{success_msg}}</div>
      {{/if}}

      {{#if error_msg}}
          <div class="alert alert-danger">{{error_msg}}</div>
      {{/if}}

      {{#if error}}
          <div class="alert alert-danger">{{error}}</div>
     {{/if}}
      <form class="form" method="post" action="/users/ChangePasswordFunction">
        <h2>Change Password</h2>
        <div class="form-group">
          <label for="email">Current Password:</label>
          <div class="relative">
            <input name="CurrentPassword"  class="form-control" id="CurrentPassword" type="password" required="" autofocus="" title="Current Password" autocomplete="" placeholder="Current Password">
            <i class="fa fa-user"></i>
          </div>
        </div>
        <div class="form-group">
          <label for="email">New Password:</label>
          <div class="relative">
            <input type="password" name="NewPassword"  class="form-control" required="" placeholder="Type your New Password">
            <i class="fa fa-envelope"></i>
          </div>
        </div>
        <div class="form-group">
          <label for="rollno">Confirm Password:</label>
          <div class="relative">
            <input name="ConfirmPassword"  class="form-control" type="password" required="" placeholder="Confirm Password">
            <i class="fa fa-envelope"></i>
          </div>
        </div>
        <div class="tright">
          <a href=""><button class="movebtn movebtnre" type="Reset"><i class="fa fa-fw fa-refresh"></i> Reset </button></a>
          <button class="movebtn movebtnsu" type="Submit">Update <i class="fa fa-fw fa-paper-plane"></i></button>
        </div>
      </form>

    </div>
</div>
